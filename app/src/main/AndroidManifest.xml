<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.astalavista.saneesh.quizrrgame">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/infinity"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/infinity_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".Activities.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <meta-data
                android:name="io.fabric.ApiKey"
                android:value="475ee7d7c56492583485a47681c94fac5ff35c14"
        />

        <activity
                android:name=".Activities.GameActivity"
                android:theme="@style/AppThemeNoToolbar">
        </activity>
        <activity android:name=".Activities.LoginScreen"/>
        <activity android:name=".Activities.MainActivity">
        </activity>
        <activity android:name=".Activities.ScoreBoardActivity"
        android:theme="@style/AppThemeNoToolbar"
        >
        </activity>
        <activity android:name=".Activities.BaseActivity">
        </activity>
    </application>

</manifest>